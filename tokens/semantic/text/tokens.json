{
    "text": {
        "body": {
            "family": {
                "primary": {
                    "$value": "{typography.family.default}",
                    "$type": "fontFamily"
                }
            },
            "size": {
                "default": {
                    "$value": "{typography.size.base}",
                    "$type": "fontSizes"
                },
                "xs": {
                    "$value": "{typography.size.200}",
                    "$type": "fontSizes",
                    "$description": "12px"
                },
                "sm": {
                    "$value": "{typography.size.300}",
                    "$type": "fontSizes",
                    "$description": "14px"
                },
                "md": {
                    "$value": "{typography.size.400}",
                    "$type": "fontSizes",
                    "$description": "16px"
                },
                "lg": {
                    "$value": "{typography.size.500}",
                    "$type": "fontSizes",
                    "$description": "18px"
                },
                "xl": {
                    "$value": "{typography.size.600}",
                    "$type": "fontSizes",
                    "$description": "20px"
                },
                "2xl": {
                    "$value": "{typography.size.700}",
                    "$type": "fontSizes",
                    "$description": "24px"
                },
                "3xl": {
                    "$value": "{typography.size.800}",
                    "$type": "fontSizes",
                    "$description": "30px"
                }
            },
            "weight": {
                "regular": {
                    "$value": "{typography.weight.semibold}",
                    "$type": "fontWeight"
                },
                "bold": {
                    "$value": "{typography.weight.bold}",
                    "$type": "fontWeight"
                }
            },
            "height": {
                "default": {
                    "$value": "{typography.height.base}",
                    "$type": "lineHeight"
                },
                "xs": {
                    "$value": "{typography.height.200}",
                    "$type": "lineHeight"
                },
                "sm": {
                    "$value": "{typography.height.300}",
                    "$type": "lineHeight"
                },
                "md": {
                    "$value": "{typography.height.400}",
                    "$type": "lineHeight"
                },
                "lg": {
                    "$value": "{typography.height.500}",
                    "$type": "lineHeight"
                },
                "xl": {
                    "$value": "{typography.height.600}",
                    "$type": "lineHeight"
                },
                "2xl": {
                    "$value": "{typography.height.700}",
                    "$type": "lineHeight"
                },
                "3xl": {
                    "$value": "{typography.height.800}",
                    "$type": "lineHeight"
                }
            }
        },
        "decoration": {
            "style": {
                "none": {
                    "$value": "none",
                    "$type": "textDecoration"
                },
                "underline": {
                    "$value": "underline",
                    "$type": "textDecoration"
                }
            },
            "thickness": {
                "$value": "{border-width.1}",
                "$type": "textDecoration"
            }
        }
    }
}