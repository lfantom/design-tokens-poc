{
    "button": {
        "tokenset": "components/button",
        "default": {
            "text": {
                "size": {
                    "$value": "{text.body.size.md}",
                    "$type": "fontSizes"
                },
                "family": {
                    "$value": "{text.body.family.primary}",
                    "$type": "fontFamilies"
                },
                "color": {
                    "$value": "{color.text.subheading}",
                    "$type": "color"
                },
                "weight": {
                    "$value": "{text.body.weight.regular}",
                    "$type": "fontWeights"
                },
                "height": {
                    "$value": "{text.body.height.md}",
                    "$type": "lineHeights"
                }
            },
            "border": {
                "$value": {
                    "width": "{semantic.border-width.small}",
                    "style": "{semantic.border-style.default}"
                },
                "$type": "border"
            },
            "border-radius": {
                "$value": "{semantic.border-radius.component}",
                "$type": "borderRadius"
            },
            "transition-time": {
                "$value": "{semantic.transition-time}",
                "$type": "duration"
            }
        },
        "primary": {
            "background": {
                "color": {
                    "$value": "{color.accent.default}",
                    "$type": "color"
                }
            },
            "text": {
                "color": {
                    "$value": "{color.base.white}",
                    "$type": "color"
                }
            },
            "border": {
                "color": {
                    "$value": "{color.accent.default}",
                    "$type": "color"
                }
            },
            "hover": {
                "background": {
                    "color": {
                        "$value": "{color.accent.muted}",
                        "$type": "color"
                    }
                },
                "border": {
                    "color": {
                        "$value": "{color.accent.muted}",
                        "$type": "color"
                    }
                }
            }
        },
        "secondary": {
            "background": {
                "color": {
                    "$value": "{color.base.white}",
                    "$type": "color"
                }
            },
            "border": {
                "color": {
                    "$value": "{color.grey.500}",
                    "$type": "color"
                }
            },
            "hover": {
                "background": {
                    "color": {
                        "$value": "{color.grey.50}",
                        "$type": "color"
                    }
                },
                "text": {
                    "color": {
                        "$value": "{color.text.hover}",
                        "$type": "color"
                    }
                }
            }
        },
        "minimal": {
            "background": {
                "color": {
                    "$value": "none",
                    "$type": "color"
                }
            },
            "border": {
                "color": {
                    "$value": "transparent",
                    "$type": "color"
                }
            },
            "text": {
                "decoration": {
                    "style": {
                        "$value": "{text.decoration.style.underline}",
                        "$type": "textDecoration"
                    },
                    "size": {
                        "$value": "{text.decoration.thickness}",
                        "$type": "textDecoration"
                    }
                }
            },
            "hover": {
                "text": {
                    "color": {
                        "$value": "{color.text.heading}",
                        "$type": "color"
                    }
                }
            }
        },
        "xs": {
            "text": {
                "size": {
                    "$value": "{text.body.size.sm}",
                    "$type": "fontSizes"
                }
            },
            "padding": {
                "$value": {
                    "y": "{semantic.space-inset.component.xs}",
                    "x": "{semantic.space-inset.component.lg}"
                },
                "$type": "spacing"
            }
        },
        "sm": {
            "text": {
                "size": {
                    "$value": "{text.body.size.sm}",
                    "$type": "fontSizes"
                }
            },
            "padding": {
                "$value": {
                    "y": "{semantic.space-inset.component.sm}",
                    "x": "{semantic.space-inset.component.xl}"
                },
                "$type": "spacing"
            }
        },
        "md": {
            "text": {
                "size": {
                    "$value": "{text.body.size.md}",
                    "$type": "fontSizes"
                }
            },
            "padding": {
                "$value": {
                    "y": "{semantic.space-inset.component.sm}",
                    "x": "{semantic.space-inset.component.2xl}"
                },
                "$type": "spacing"
            }
        },
        "lg": {
            "text": {
                "size": {
                    "$value": "{text.body.size.md}",
                    "$type": "fontSizes"
                }
            },
            "padding": {
                "$value": {
                    "y": "{semantic.space-inset.component.md}",
                    "x": "{semantic.space-inset.component.3xl}"
                },
                "$type": "spacing"
            }
        },
        "xl": {
            "text": {
                "size": {
                    "$value": "{text.body.size.lg}",
                    "$type": "fontSizes"
                }
            },
            "padding": {
                "$value": {
                    "y": "{semantic.space-inset.component.xl}",
                    "x": "{semantic.space-inset.component.7xl}"
                },
                "$type": "spacing"
            }
        }
    }
}